<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/bind" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIND"
    />

    <Button
        android:id="@+id/unbind" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UN BIND"
    />

    <Button
        android:id="@+id/add_book" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD BOOK"
    />

    <Button
        android:id="@+id/get_lists" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET LISTS"
    />


</LinearLayout>